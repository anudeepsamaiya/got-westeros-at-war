<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textBattleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tool:text="Battle of Riverrun" />

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="3dp"
            android:layout_margin="4dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="8dp">

                <TextView
                    android:id="@+id/textBattleLoc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_margin="4dp"
                    android:padding="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    tool:text="478" />

                <TextView
                    android:id="@+id/textBattleYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:layout_toRightOf="@id/textBattleLoc"
                    android:padding="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    tool:text="478" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="Attacker"
                    android:layout_below="@id/textBattleYear" />

                <ImageView
                    android:id="@+id/imgAttackerKing"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_margin="4dp"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@id/text1" />

                <TextView
                    android:id="@+id/textAttackerKing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imgAttackerKing"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    tool:text="Tommen" />

                <TextView
                    android:id="@+id/text2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Small"
                    android:text="Defender"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textBattleYear" />

                <ImageView
                    android:id="@+id/imgDefenderKing"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_margin="4dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/text2" />

                <TextView
                    android:id="@+id/textDefenderKing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/imgDefenderKing"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    tool:text="Robert" />

                <TextView
                    android:id="@+id/textBattleOutcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textAttackerKing"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="8dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    tool:text="won" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textBattleOutcome"
                    android:layout_margin="4dp"
                    android:layout_toLeftOf="@+id/textMajorDeath"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:text="Major Capture : " />

                <TextView
                    android:id="@+id/textMajorCapture"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textBattleOutcome"
                    android:layout_margin="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    tool:text="won" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textMajorCapture"
                    android:layout_margin="4dp"
                    android:layout_toLeftOf="@+id/textMajorDeath"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    android:text="Major Death : " />

                <TextView
                    android:id="@+id/textMajorDeath"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/textMajorCapture"
                    android:layout_margin="4dp"
                    android:textAppearance="@style/TextAppearance.AppCompat"
                    tool:text="won" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</layout>
